    <!---------------- HEAD ------------->
    <%- include ('./partials/head.ejs') %>
    <!----------------------------------->
    <title><%= locals.title? title: 'Login Sytem' %></title>
<body>


<div class="text-center center-div">
    <div style="max-width: 2000px; margin: 0auto; padding:10px;">
        <div class="container-fluid mx-auto">
            <div class="row" style="margin-top: 20px;">
                <div class="col-11 mx-auto, col-sm-8 mx-auto, col-md-4 mx-auto">
                    <div class="container w-100 border py-5" id="loginContainer">
                        <div class="title pb-5">
                            <h1 class="font-weight-bold ">Amiibo App</h1>
                            <span>Log in for the existing user</span>
                            <% if(locals.logout)  {%>
                                <div class="alter alert-success text-center">
                                    <%= logout %>
                                </div>
                            <% } %> 
                        </div>
                        <form action="/route/login" method="POST" id="pt-3">
                            <div class="form-group">
                                <input type="email" class="form-control" name="email" placeholder="email">
                                <small class="form-text text-muted">Register email address</small>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control"  name="password" placeholder="password">
                            </div>
                            <br>
                            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <!---------------- Footer ------------->
    <%- include ('./partials/footer.ejs') %>
    <!------------------------------------->

</body>
</html>